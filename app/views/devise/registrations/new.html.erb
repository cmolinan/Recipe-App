<div class="section_logins">
  <div class="s_title">
    * New User Registration *
  </div>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="signup_box">
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="s_box">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="s_box">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="s_box">
          <%= f.label :password, class: "box1" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> chars min)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "box2" %>
        </div>

        <div class="s_box">
          <%= f.label :password_confirmation, class: "box1" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "box2" %>
        </div>


        <div class="sign_up">
          <%= f.submit "Sign up", class:"btn-login" %>
        </div>
      </div>
    <% end %>  

  <%= render "devise/shared/links" %>
</div>