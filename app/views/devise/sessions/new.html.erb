
<div class="section_logins">
  <div class="s_title">
    * Login *
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="login_box1">
      <table class="login_box">
        <tr  class="box">
          <td>
            <%= f.label :Username, class: "box1" %> 
          </td>
          <td>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "box2" %>
          </td>
        </tr>
        <tr class="box">
          <td>
            <%= f.label :Password, class: "box1" %>
          </td>
          <td>
            <%= f.password_field :password, autocomplete: "current-password", class: "box2" %>
          </td>
        <tr>
      </table>
      <div class="login">
          <%= f.submit "Log in", class:"btn-login" %>    
      </div>
    </div>
    

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

  <% end %>

  <%= render "devise/shared/links" %>

</div>
